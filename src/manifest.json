{
  "manifest_version": 3,
  "name": "LinkedIn Job Applies Inspector",
  "version": "0.1.0",
  "description": "Reveal the exact number of applicants on LinkedIn job postings by intercepting frontend JSON responses. Real-time, local-only insights.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "https://www.linkedin.com/*"
      ]
    }
  ]
}