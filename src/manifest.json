{
  "manifest_version": 3,
  "name": "LinkedIn Job Applies Inspector",
  "version": "0.3.0",
  "description": "Show applicants, salary and dates for LinkedIn job postings via direct Voyager calls. UI in the popup.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_title": "LinkedIn Job Insights",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "*://*.linkedin.com/*"
      ]
    }
  ]
}
